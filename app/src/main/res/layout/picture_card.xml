<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:id="@+id/card_title"
        android:text="Title of the Card"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/browse_guide" />
    <practice.katienza.niceday.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:rotation="180"
        android:text="Card Browse Guide"
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/browse_guide" />
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/browse_guide"
        android:layout_above="@+id/extra_text"
        android:layout_below="@+id/card_title"
        />
    <TextView
        android:id="@+id/extra_text"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Extra Data to Add"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/browse_guide" />
</RelativeLayout>